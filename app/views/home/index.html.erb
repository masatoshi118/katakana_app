<div class="main">
  <div class="waraper">
    <form id="chars">
      <div class="uper_area">
        <div class="image-window">
          <%= image_tag @question[:questions_image_file_name], class: 'question_image' %>
        </div>
        <div class="content">
          <div class="explanation"><h1 id="hint">イラストのなまえをえらんでね!</h1></div>
          <div class="controller">
            <input type="text" value="" id="result" class="input_form">
            <div class="erase_submit">
              <button type="button" id="erase_btn" class="form_btn erase_btn" value="">
                <%= image_tag "bunbougu_keshigomu.png", class: "eraser_img" %>
              </button>
              <input type="button" id="btn" value="こたえ" class="form_btn judge_btn">
            </div>
          </div>
        </div>
      </div>
      <div class="hiragana_area">
        <% @disp_katakana.zip(@sounds).each do |katakana, sound| %>
          <button type="button" class="hiragana_btn" value="<%= katakana.name %>">
            <%= image_tag katakana.katakana_image %>
            <%= audio_tag("#{sound.sound_file_name}", autobuffer: true, muted: true) %>
          </button>
        <% end %>
      </div>
    </form>
    <button class="retry_btn" onclick="window.location.reload();">つぎのもんだい</button>
  </div>

  <div id="modal1" class="modal">
    <%= audio_tag("correct1.mp3", id: 'correct', autobuffer: true, muted: true) %>
    <div class="modal-content">
      <p class="message seikai">せいかい！</p>
      <div class="modal_img">
        <%= image_tag @question[:questions_image_file_name], class: "question_image" %>
        <p class='question_name'><%= @question[:name] %></p>
      </div>
      <button class="retry_btn" onclick="window.location.reload();">つぎのもんだい</button>
    </div>
  </div>

  <div id="modal2" class="modal">
    <%= audio_tag("stupid4.mp3", id: 'mistake', autobuffer: true, muted: true) %>
    <div class="modal-content">
      <p class="message">ちがうよ</p>
      <div class="modal_img">
        <%= image_tag 'mark_manpu13_kega.png', class: "question_image" %>
      </div>
      <button id="back" class="retry_btn">もどる</button>
    </div>
  </div>
</div>
<input name="answer" type="hidden" value=<%= @question[:name] %> id="answer" >
<input name="answer" type="hidden" value=<%= @question[:name].length %> id="length" >